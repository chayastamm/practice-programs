package connect4;

import java.awt.Color;

public class Piece {
	
	
	private int x;
	private int y;
	private int length;
	private int width;
	private Color color;
	
	public Piece(int x, int y, int length, int width, Color color) {
		this.x = x;
		this.y = y;
		this.length = length;
		this.width = width;
		this.color = color;
	}

}
