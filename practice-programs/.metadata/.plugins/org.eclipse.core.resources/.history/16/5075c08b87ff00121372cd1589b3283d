package hangman;

import java.io.File;
import java.io.FileNotFoundException;
import java.net.URL;
import java.util.Scanner;

public class test {
	public test() throws FileNotFoundException {
		getNums();
	}

	public static void main(String[] args) throws FileNotFoundException {
		test t = new test();
	}

	public void getNums() throws FileNotFoundException {
		int min = 10, max = 0;
		File file2 = new File(
				"C:/Documents and Settings/Chaya/My Documents/Downloads/workspace/Practice/bin/hangman/dic.txt");

		URL url = getClass().getResource("dic.txt");
		File file = new File(url.getPath());
		Scanner readFromFile = new Scanner(file2);
		while (readFromFile.hasNextLine()) {
			String word = readFromFile.nextLine();
			if (word.length() > max) {
				max = word.length();
			}
			if (word.length() < min) {
				min = word.length();
			}
		}
		System.out.println("min " + min + " max " + max);
		readFromFile.close();
	}
}
