package connect4;

import java.awt.Color;

public class Board {

	private Piece[][] pieces;
	private Color winner;

	public Board() {
		this.pieces = new Piece[6][7];
		this.winner = null;
		createBoard();
	}

	public Color getWinner() {
		return this.winner;
	}

	public void setWinner(Color winner) {
		this.winner = winner;
	}

	public void createBoard() {
		int x = 0;
		int y = 0;
		for (int i = 0; i < 6; i++) {
			for (int j = 0; j < 7; j++) {
				this.pieces[i][j] = new Piece(x, y);
				if (x == 600) {
					x = 0;
				} else {
					x += 100;
				}
			}
			if (y == 500) {
				y = 0;
			} else {
				y += 100;
			}
		}
	}

	public boolean isWinner() {
		return false;

	}

	public boolean isVerticalWinner() {
		for (int i = 0; i < 6; i++) {
			for (int j = 0; j < 7; j++) {
				
			}
		}
		return false;
	}

	public boolean isHorizontalWinner() {
		return false;
	}

	public boolean isDiagonalWinner() {
		return false;
	}

	public int getNextSpot(int x) {
		for (int i = 0; i < 6; i++) {
			if (this.pieces[i][x].getColor() == Color.BLACK) {
				return i;
			}
		}
		// no empty spaces
		return -1;
	}

	public Piece[][] getPieces() {
		return this.pieces;
	}

	public void setPieces(Piece[][] pieces) {
		this.pieces = pieces;
	}

}
